<!DOCTYPE html>
<html>
  <head>
    <title>Monetarily Management - Goals</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .menu {
        background-color: #48b6e2;
        display: flex;
        justify-content: space-between;
        padding: 0 25px;
      }

      .menu ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
      }

      .menu li {
        margin: 0;
      }

      .menu a {
        display: block;
        padding: 24px;
        color: #fff;
        text-decoration: none;
      }

      .menu a:hover {
        text-decoration: underline;
      }

      .container {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
      }

      .goals-container {
        margin-top: 50px;
      }

      .goal {
        width: 400px;
        padding: 20px;
        background-color: #f0f0f0;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .goal-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }

      .goal-description {
        font-size: 16px;
        color: #666;
        margin-bottom: 10px;
      }

      .goal-actions {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .button {
        padding: 10px 20px;
        background-color: #4caf50;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 10px;
        text-decoration: none;
      }

      .button:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <div class="menu">
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/show-budget">Budget</a></li>
        <li><a href="/show-goals">Goals</a></li>
        <li><a href="/show-report">Report</a></li>
      </ul>
    </div>
    <div class="container">
      <h1>Your Financial Goals</h1>
      <a href="/add-goal" class="button">Add Goal</a>
      <div class="goals-container">
        <% goals.forEach((goal) => { %>
          <div class="goal">
            <div class="goal-title"><%= goal.title %></div>
            <div class="goal-description"><%= goal.description %></div>
            <div class="goal-description">Required Amount: <%=goal.amount%></div>
            <div class="goal-description">Deadline: <%= new Date(goal.deadline).toLocaleDateString() %></div>
            <div class="goal-actions">
              <a href="/show-goal/<%= goal.id %>" class="button">View</a>
              <a href="/edit-goal?id=<%= goal.id %>" class="button">Edit</a>
              <a href="/delete-goal?id=<%= goal.id %>" class="button">Delete</a>
            </div>
          </div>
        <% }); %>
      </div>
  </body>
</html>
